# PacketGhost config (key=value)

# TTL decoy: duplicate original packet with small TTL
ttl_decoy.enabled=1
ttl_decoy.ttl=2
ttl_decoy.apply_once_per_flow=1

# Fake RST injection
rst.enabled=1
rst.bad_checksum=1
rst.with_ack=0
rst.small_ttl=0

# Fragmentation
fragment.enabled=0
fragment.out_of_order=1
fragment.http_split_pos=2
fragment.tls_split_pos=1

# User-Agent replacement
ua_replace.enabled=1
ua_replace.target=curl/
ua_replace.replace=Mozilla/

# TCP options
sack.disable=1

